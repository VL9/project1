<h1>All Cuisines</h1>

<div class="gallery">
  <% @cuisines.each do |cuisine| %>
    <div class="wrapper">
    <%= link_to image_tag(cuisine.image, :class => 'img-fluid cuisine-thumbnail img-thumbnail', :alt => cuisine.name), cuisine, :name => cuisine.name %>
      <div class="text">
        <p><%=  cuisine.name %></p>
      </div>
      </div>
    <% end %>
</div>
