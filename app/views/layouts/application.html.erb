<!DOCTYPE html>
<html>
  <head>
    <title>Project1</title>
    <%= csrf_meta_tags %>

    <%= stylesheet_link_tag    'application', media: 'all', 'data-turbolinks-track': 'reload' %>
    <%= javascript_include_tag 'application', 'data-turbolinks-track': 'reload' %>
  </head>

  <body>
    <nav>
      <%= link_to 'Home', root_path %>
      <% if @current_user.present? %>
        <%= link_to "Sign Out #{ @current_user.email}", login_path, :method => 'delete' %>
        <% else %>
      <%= link_to 'Sign Up', new_user_path %>
      <%= link_to 'Sign In', login_path  %>
      <%= link_to 'All Restaurants', restaurants_path %>
      <%= link_to 'New Restaurants', new_restaurant_path %>
      <%= link_to 'All Cuisines', cuisines_path %>
      <%= link_to 'New Cuisines', new_cuisine_path %>
      <%= link_to 'All Suburbs', suburbs_path %>
      <%= link_to 'New Suburbs', new_suburb_path %>
        <% end %>
    </nav>
    <%= yield %>
  </body>
</html>
