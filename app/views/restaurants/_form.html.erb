<%= form_for @restaurant do |f| %>

  <%= f.label :name %>
  <%= f.text_field :name, :required => true %>

  <%= f.label :cuisine_id %>
  <%= f.select :cuisine_id, Cuisine.pluck(:name, :id), :include_blank => true %>

  <%= f.label :suburb_id %>
  <%= f.select :suburb_id, Suburb.pluck(:name, :id), :include_blank => true %>

  <%= f.label :price %>
  <%= f.select(:price, ['$', '$$', '$$$'], :include_blank => true) %>

  <%= f.label :image %>
  <%= f.url_field :image %>

  <%= f.submit %>
<% end %>
